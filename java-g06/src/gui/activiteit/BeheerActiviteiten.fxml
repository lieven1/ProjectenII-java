<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ScrollPane>
         <content>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1024.0">
               <children>
                  <HBox prefHeight="599.0" prefWidth="1024.0">
                     <children>
                        <VBox>
                           <children>
                              <ImageView fx:id="imageView" fitHeight="94.0" fitWidth="512.0" pickOnBounds="true" preserveRatio="true" />
                              <TextField fx:id="filterTextField" onAction="#search" onInputMethodTextChanged="#search" promptText="search..." />
                              <HBox>
                                 <children>
                                    <DatePicker fx:id="fromDatePicker" onAction="#search" promptText="from..." />
                                    <DatePicker fx:id="untilDatePicker" onAction="#search" promptText="until..." />
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clear" text="Clear" />
                                    <Button fx:id="filterButton" mnemonicParsing="false" onAction="#filter" text="Filter" />
                                 </children>
                              </HBox>
                              <Label text="Activiteiten" />
                              <TableView fx:id="tableView" prefHeight="600.0" prefWidth="600.0">
                                <columns>
                                    <TableColumn fx:id="checkColumn" prefWidth="31.0" />
                                    <TableColumn fx:id="naamColumn" prefWidth="108.0" text="Naam" />
                                    <TableColumn fx:id="typeColumn" prefWidth="86.0" text="Type" />
                                    <TableColumn fx:id="aantalDeelnemersColumn" prefWidth="120.0" text="Aantal deelnemers" />
                                  <TableColumn fx:id="startDateColumn" prefWidth="85.0" text="Start datum" />
                                  <TableColumn fx:id="eindDateColumn" prefWidth="81.0" text="Eind datum" />
                                </columns>
                              </TableView>
                           </children>
                        </VBox>
                        <VBox prefHeight="600.0" prefWidth="600.0">
                           <children>
                              <HBox prefHeight="137.0" prefWidth="512.0">
                                 <children>
                                    <VBox prefHeight="523.0" prefWidth="220.0" spacing="10.0">
                                       <children>
                                          <Label text="Activiteit naam" />
                                          <Label text="Type" />
                                          <Label text="Startdatum" />
                                          <Label text="Einddatum" />
                                       </children>
                                    </VBox>
                                    <VBox prefHeight="523.0" prefWidth="295.0">
                                       <children>
                                          <TextField fx:id="titleField" />
                                          <TextField fx:id="typeField" />
                                          <DatePicker fx:id="startDatumPicker" />
                                          <DatePicker fx:id="eindDatumPicker" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              <HBox nodeOrientation="LEFT_TO_RIGHT">
                                 <children>
                                    <Button fx:id="deelnemersButton" mnemonicParsing="false" onAction="#showDeelnemers" text="Deelnemers" textAlignment="CENTER" />
                                    <Button mnemonicParsing="false" onAction="#showBegeleiders" text="Begeleiders" />
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <ListView fx:id="leftListView" prefHeight="200.0" prefWidth="200.0" />
                                    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="38.0">
                                       <children>
                                          <Button mnemonicParsing="false" onAction="#leftToRight" text="-&gt;" />
                                          <Button mnemonicParsing="false" onAction="#rightToLeft" text="&lt;-" />
                                       </children>
                                    </VBox>
                                    <ListView fx:id="rightListView" prefHeight="200.0" prefWidth="200.0" />
                                 </children>
                              </HBox>
                              <ToolBar prefHeight="40.0" prefWidth="1024.0">
                                <items>
                                    <Button fx:id="newButton" mnemonicParsing="false" onAction="#create" text="Nieuwe Activiteit" />
                                    <Button fx:id="toevoegenButton" mnemonicParsing="false" onAction="#save" text="Toevoegen" />
                                    <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#delete" text="Verwijder" />
                                </items>
                              </ToolBar>
                           </children></VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
